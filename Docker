FROM php:8.1-fpm

RUN apt-get update && apt-get install -y \
    git zip unzip libzip-dev libpng-dev libonig-dev libxml2-dev curl libcurl4-openssl-dev libssl-dev \
    && docker-php-ext-install pdo_mysql zip mbstring exif pcntl bcmath gd curl openssl

COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

WORKDIR /var/www

COPY composer.json composer.lock ./

RUN composer install --no-dev --optimize-autoloader --no-interaction --verbose

COPY . .

RUN php artisan config:cache

EXPOSE 9000

CMD ["php-fpm"]
